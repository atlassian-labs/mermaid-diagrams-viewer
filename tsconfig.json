{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "ES2020"
    ],
    "types": ["node", "react"],
    "baseUrl": "./",
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "ForgeUI.createElement",
    "outDir": "out",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
